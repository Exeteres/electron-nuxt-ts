{
  "name": "{{name}}",
  "author": "{{author}}",
  "version": "0.0.1",
  "main": "dist/main",
  "scripts": {
    "nuxt:generate": "nuxt generate config",
    "nuxt:dev": "nuxt dev config",
    "tsc:build": "tsc --build config/tsconfig.json",
    "build:dist": "{{pm}} nuxt:generate && {{pm}} tsc:build",
    "build:pack": "electron-builder --config config/electron-builder.json",
    "build": "{{pm}} build:dist && {{pm}} build:pack",
    "dev": "{{pm}} tsc:build && concurrently -k -n main,renderer -c blue,green \"cross-env NODE_ENV=development electron .\" \"{{pm}} nuxt:dev\""
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.18",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^4.0.0",
    "electron-builder": "^20.38.4",
    "electron-devtools-installer": "^2.2.4",
    "nuxt": "^2.3.4",
    "typescript": "^3.2.2"{{#has 'Pug'}},
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0"{{/has}}{{#has 'CoffeeScript'}},
    "coffee-loader": "^0.9.0",
    "coffeescript": "^2.3.2"{{/has}}{{#has 'TypeScript'}},
    "ts-loader": "^5.3.3"{{/has}}{{#has 'SASS/SCSS'}},
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0"{{/has}}
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.16.4",
    "express-useragent": "^1.0.12",
    "get-port": "^4.1.0",
    "wait-on": "^3.2.0"
  }
}
